@model RegistracijaModel

@{
    ViewData["Title"] = "Регистрација";
}

<div class="card">
    <h4 class="text-center mb-4">Регистрација</h4>
    <form asp-action="Registracija" method="post" class="">

        <div class="row text-left">
            <div class="form-group col-sm-6 flex-column d-flex">
                <label asp-for="Ime">Име<span class="text-danger"> *</span></label>
                <input asp-for="Ime" class="form-control">
                <span asp-validation-for="Ime" class="text-danger"></span>
            </div>
            <div class="form-group col-sm-6 flex-column d-flex">
                <label asp-for="Prezime">Презиме<span class="text-danger"> *</span></label>
                <input asp-for="Prezime" class="form-control">
                <span asp-validation-for="Prezime" class="text-danger"></span>
            </div>
        </div>

        <div class="row text-left">
            <div class="form-group col-sm-6 flex-column d-flex">
                <label asp-for="Email">E-mail адреса<span class="text-danger"> *</span></label>
                <input asp-for="Email" class="form-control">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group col-sm-6 flex-column d-flex">
                <label asp-for="Lozinka">Лозинка<span class="text-danger"> *</span></label>
                <input asp-for="Lozinka" type="password" class="form-control">
                <span asp-validation-for="Lozinka" class="text-danger"></span>
            </div>
        </div>

        <div class="row text-left">
            <div class="form-group col-sm-6 flex-column d-flex">
                <label asp-for="PTTMesto">Место<span class="text-danger"> *</span></label>
                <select asp-for="PTTMesto" class="form-control">
                    <option value="">Изабери место</option>
                    @foreach (var mesto in ViewBag.Mesta as IEnumerable<dynamic>)
                    {
                        <option value="@mesto.PTT">@mesto.Naziv</option>
                    }
                </select>
                <span asp-validation-for="PTTMesto" class="text-danger"></span>
            </div>

            <div class="form-group col-sm-6 flex-column d-flex">
                <label asp-for="IDDrzavaRodjenja">Држава рођења<span class="text-danger"> *</span></label>
                <select asp-for="IDDrzavaRodjenja" class="form-control">
                    <option value="">Изабери државу</option>
                    @foreach (var drzava in ViewBag.Drzave as IEnumerable<dynamic>)
                    {
                        <option value="@drzava.SifraDrzave">@drzava.Naziv</option>
                    }
                </select>
                <span asp-validation-for="IDDrzavaRodjenja" class="text-danger"></span>
            </div>
        </div>

        <div class="row text-left">
            <div class="form-group col-sm-6 flex-column d-flex">
                <label asp-for="IDDrzavaDrzavljanstva">Држава држављанства<span class="text-danger"> *</span></label>
                <select asp-for="IDDrzavaDrzavljanstva" class="form-control">
                    <option value="">Изабери државу</option>
                    @foreach (var drzava in ViewBag.Drzave as IEnumerable<dynamic>)
                    {
                        <option value="@drzava.SifraDrzave">@drzava.Naziv</option>
                    }
                </select>
                <span asp-validation-for="IDDrzavaDrzavljanstva" class="text-danger"></span>
            </div>

            <div class="form-group col-sm-6 flex-column d-flex">
                <label asp-for="PolKorisnika">Пол корисника<span class="text-danger"> *</span></label>
                <select asp-for="PolKorisnika" class="form-control">
                    <option value="">Изабери пол</option>
                    @foreach (var pol in ViewBag.PolKorisnika as IEnumerable<dynamic>)
                    {
                        <option value="@pol.ID">@pol.Opis</option>
                    }
                </select>
                <span asp-validation-for="PolKorisnika" class="text-danger"></span>
            </div>
        </div>

        <div class="row text-left">
            <div class="form-group col-sm-6 flex-column d-flex">
                <label asp-for="DatumRodjenjaDateTime">Датум рођења<span class="text-danger"> *</span></label>
                <input asp-for="DatumRodjenjaDateTime" type="date" class="form-control">
                <span asp-validation-for="DatumRodjenjaDateTime" class="text-danger"></span>
            </div>


            <div class="form-group col-sm-6 flex-column d-flex">
                <label asp-for="JMBG">ЈМБГ<span class="text-danger"> *</span></label>
                <input asp-for="JMBG" class="form-control">
                <span asp-validation-for="JMBG" class="text-danger"></span>
            </div>
        </div>

        <div class="row text-left">
            <div class="form-group col-sm-6 flex-column d-flex">
                <label asp-for="Adresa">Адреса<span class="text-danger"> *</span></label>
                <input asp-for="Adresa" class="form-control">
                <span asp-validation-for="Adresa" class="text-danger"></span>
            </div>

            <div class="form-group col-sm-6 flex-column d-flex">
                <label asp-for="Telefon">Телефон<span class="text-danger"> *</span></label>
                <input asp-for="Telefon" class="form-control">
                <span asp-validation-for="Telefon" class="text-danger"></span>
            </div>
        </div>

        <button type="submit" class="btn btn-sm btn-success">Региструј се</button>

    </form>
</div>
