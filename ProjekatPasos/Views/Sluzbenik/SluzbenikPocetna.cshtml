@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

@{
    ViewData["Title"] = "Почетна";
    var korisnickoIme = ViewData["KorisnickoIme"] as string;
}

<h1 class="text-center">ДОБРОДОШЛИ, @korisnickoIme</h1>
<h2 class="text-center">СЛУЖБЕНИЧКИ ПРОФИЛ</h2>

<div class="container mt-4">
    <div class="row">
        <div class="col-6 mb-3">
            <a class="nav-link text-dark d-block text-center" asp-area="" asp-controller="Sluzbenik" asp-action="SluzbenikPregledZahteva">
                <button>ПРЕГЛЕД ЗАХТЕВА</button>
            </a>
        </div>
        <div class="col-6 mb-3">
            <a class="nav-link text-dark d-block text-center" asp-area="" asp-controller="Sluzbenik" asp-action="SluzbenikPregledPasosa">
                <button>ПРЕГЛЕД ПАСОША</button>
            </a>
        </div>
        <div class="col-6 mb-3">
            <a class="nav-link text-dark d-block text-center" asp-area="" asp-controller="Sluzbenik" asp-action="SluzbenikPregledTermina">
                <button>ПРЕГЛЕД ТЕРМИНА</button>
            </a>
        </div>
        <div class="col-6 mb-3">
            <a class="nav-link text-dark d-block text-center" asp-area="" asp-controller="Sluzbenik" asp-action="SluzbenikProfil">
                <button>ПРОФИЛ КОРИСНИКА</button>
            </a>
        </div>
    </div>
</div>
